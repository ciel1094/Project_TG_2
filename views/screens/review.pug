extends ../layout/base.pug

block content
    section.reviewWrapper 
        each res1 in result1
            div #{res1.count}개
            div #{res1.avg}점

        form.createFrom(action="/review", method="post")
            select(name="score")
                option(value="1") 1점
                option(value="2") 2점
                option(value="3") 3점
                option(value="4") 4점
                option(value="5" selected) 5점

            input(type="text" name="content" required)
            input(type="submit" name="작성")

        each review in result2 
            div.review
                div #{review.score}점
                div #{review.content}