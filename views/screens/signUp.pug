extends ../layout/base.pug

block content       
    block content
        form(action="/sign_up/LoginCreate" method="post")
            input.text(type="text" name="id"  placeholder="아이디" required) 

            input.text(type="text" name="password"  placeholder="비밀번호" required) 
            
            input.text(type="text" name="nickname"  placeholder="닉네임" required)  
            
            SELECT(name="gender")
                option(value="남성") 남성
                option(value="여성") 여성
                option(value="선택안함" sleectd) 선택안함     
            input(type="submit" value="SIGN UP")